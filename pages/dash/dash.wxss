/* - - - - - - - - - - - TOP BAR */
.top-bar {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  padding: 15rpx;
  background-color: #FFC43D;
  position: relative;
  height: 100rpx;
  /* text-align: center; */
}

.journey-greet {
  margin: 5rpx 15rpx; 
}

/* - - - - - - - - - - - - - -STATUS BADGE */

.status{
  /* background-color: #3A074F; */
  /* background-image: url('../../assets/images/backdrop.png'); */
  height: 75vh;
  display: flex;
  position: relative;
  /* justify-content: center;
  align-content: center; */
  /* flex-direction: column; */
}


.user-avatar {
  position: absolute;
  top: 20rpx;
  bottom: 0rpx;
  left: 0;
  right: 0;
  border-radius: 50%;
  width: 140rpx;
  height: 140rpx;
  margin: 0 auto;
  margin-bottom: 50rpx;
  border: 8rpx solid #FFC43D;
  display: block;
}

.badge {
  position: absolute;
  display: block;
  bottom: 50rpx;
  top: 220rpx;
  right: 0rpx;
  left:0rpx;
  height: 500rpx;
  width: 500rpx;
  margin: 0 auto;
  /* z-index: 2; */
}

.backdrop {
  height: 100%;
  width: 100vw;
  z-index: 0;
}

/* - - - - - - - - - - - - - - - - STATS */

.user-stats {
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: row; 
}

.stat {
  background-color: aqua;
  width: 50%;
  border: 2rpx solid black;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  padding: 10rpx;

}

/* - - - - - - - - - - - - FONT COLORS */

.purplefont {
  color: #3A074F;
}

.whitefont {
  color: white;
}

.goldfont {
  color: #FFC43D;
}

.redfont {
  color: #B80C09;
}